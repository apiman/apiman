<jboss-deployment-structure>
  <deployment>
    <exclusions>
      <module name="org.apache.log4j" />
      <module name="org.apache.logging.log4j.api" />
    </exclusions>
    <dependencies>
      <module name="org.infinispan" />
      <module name="org.hibernate" />
      <module name="org.picketbox" />
