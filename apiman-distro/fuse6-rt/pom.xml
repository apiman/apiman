<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.overlord.apiman</groupId>
    <artifactId>apiman-distro</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <artifactId>apiman-distro-fuse6-rt</artifactId>
  <packaging>pom</packaging>
  <name>apiman-distro-fuse6-rt</name>

  <dependencies>
    <!-- APIMan Modules -->
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-gateway-servlet</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>apiman-rt-engine-beans</artifactId>
          <groupId>org.overlord.apiman</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiman-rt-engine-policies</artifactId>
          <groupId>org.overlord.apiman</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiman-rt-engine-core</artifactId>
          <groupId>org.overlord.apiman</groupId>
        </exclusion>
        <exclusion>
          <artifactId>overlord-commons-i18n</artifactId>
          <groupId>org.overlord</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-io</artifactId>
          <groupId>commons-io</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpclient</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpcore</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jackson-core-asl</artifactId>
          <groupId>org.codehaus.jackson</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jackson-mapper-asl</artifactId>
          <groupId>org.codehaus.jackson</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-gateway-war-fuse6</artifactId>
    </dependency>

    <!-- HTTP Components -->
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient-osgi</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>httpclient</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpclient-cache</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>fluent-hc</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpcore</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpmime</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-codec</artifactId>
          <groupId>commons-codec</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpcore-osgi</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>httpcore</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
        <exclusion>
          <artifactId>httpcore-nio</artifactId>
          <groupId>org.apache.httpcomponents</groupId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- Additional Third Party JARs needed by apiman-rt-gateway-war-fuse6 but marked as 'provided there because 
         we don't want them packaged in the WAR -->
    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-jaxrs</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>jackson-core-asl</artifactId>
          <groupId>org.codehaus.jackson</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jackson-mapper-asl</artifactId>
          <groupId>org.codehaus.jackson</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <!-- Disable this check -->
          <execution>
            <id>enforce-plugin-versions</id>
            <phase>non-existant</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.overlord</groupId>
        <artifactId>overlord-commons-maven-plugin</artifactId>
        <version>${version.org.overlord.overlord-commons.overlord-commons-maven-plugin}</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>generate-features-xml</goal>
            </goals>
            <configuration>
              <outputFile>${project.build.directory}/features.xml</outputFile>
              <attach>true</attach>
              <repositories>
                <repository>mvn:org.overlord.apiman/apiman-distro-fuse6-rt-embedded/${project.version}/xml/features</repository>
              </repositories>
              <features>
                <!-- All APIMan Dependencies -->
                <feature>
                  <name>apiman-rt-dependencies</name>
                  <version>${project.version}</version>
                  <comment>All API Management Dependencies</comment>
                  <excludes>
                    <exclude>org.overlord.apiman:apiman-*:*</exclude>
                  </excludes>
                </feature>
                <!-- APIMan Runtime -->
                <feature>
                  <name>apiman-rt</name>
                  <version>${project.version}</version>
                  <comment>API Management Runtime</comment>
                  <dependsOnFeatures>
                    <feature>
                      <name>jndi</name>
                    </feature>
                    <feature>
                      <name>war</name>
                    </feature>
                    <feature>
                      <name>cxf</name>
                    </feature>
                    <feature>
                      <name>apiman-rt-dependencies</name>
                      <version>${project.version}</version>
                    </feature>
                    <feature>
                      <name>apiman-rt-embedded</name>
                      <version>${project.version}</version>
                    </feature>
                  </dependsOnFeatures>
                  <includes>
                    <include>org.overlord.apiman:apiman-rt-gateway*:*</include>
                  </includes>
                </feature>
              </features>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>