<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.overlord.apiman</groupId>
    <artifactId>apiman-dt-api</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>apiman-dt-api-war-fuse6</artifactId>
  <packaging>war</packaging>
  <name>apiman-dt-api-war-fuse6</name>

  <dependencies>
    <!-- Project Dependencies -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-common-auth</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-config</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-rest</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-security</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-gateway</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-gateway-rest</artifactId>
    </dependency>

    <!-- Overlord Commons -->
    <dependency>
      <groupId>org.overlord</groupId>
      <artifactId>overlord-commons-services</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord</groupId>
      <artifactId>overlord-commons-gwt</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord</groupId>
      <artifactId>overlord-commons-i18n</artifactId>
    </dependency>

    <!-- Required Spec Libs -->
    <dependency>
      <groupId>org.hibernate.javax.persistence</groupId>
      <artifactId>hibernate-jpa-2.0-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>
    
    <!-- CXF -->
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxrs</artifactId>
      <scope>provided</scope>
    </dependency>
    
    <!-- Jackson JAX-RS -->
    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-jaxrs</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>${project.build.directory}/osgi/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>bundle-manifest</id>
            <phase>process-classes</phase>
            <goals>
              <goal>manifest</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <supportedProjectTypes>
            <supportedProjectType>jar</supportedProjectType>
            <supportedProjectType>bundle</supportedProjectType>
            <supportedProjectType>war</supportedProjectType>
          </supportedProjectTypes>
          <manifestLocation>${project.build.directory}/osgi</manifestLocation>
          <instructions>
            <Web-ContextPath>/apiman-dt-api</Web-ContextPath>
            <Webapp-Context>/apiman-dt-api</Webapp-Context>
            <Bundle-ClassPath>.,WEB-INF/classes</Bundle-ClassPath>
            <Import-Package>
              org.overlord.commons.gwt.server.filters,
              org.overlord.commons.i18n.server.filters,
              org.overlord.apiman.dt.api.beans.actions,
              org.overlord.apiman.dt.api.beans.apps,
              org.overlord.apiman.dt.api.beans.contracts,
              org.overlord.apiman.dt.api.beans.exceptions,
              org.overlord.apiman.dt.api.beans.idm,
              org.overlord.apiman.dt.api.beans.members,
              org.overlord.apiman.dt.api.beans.orgs,
              org.overlord.apiman.dt.api.beans.plans,
              org.overlord.apiman.dt.api.beans.policies,
              org.overlord.apiman.dt.api.beans.search,
              org.overlord.apiman.dt.api.beans.services,
              org.overlord.apiman.dt.api.beans.summary,
              org.overlord.apiman.dt.api.beans.system,
              org.overlord.apiman.dt.api.core.util,
              org.overlord.apiman.dt.api.gateway.rest,
              org.overlord.apiman.dt.api.jpa.roles,
              org.overlord.apiman.dt.api.rest.impl,
              org.overlord.apiman.dt.api.security.impl,
              org.apache.cxf.binding.xml,
              org.apache.cxf.binding.xml.wsdl11,
              org.apache.cxf.jaxrs.servlet,
              org.apache.cxf.policy,
              org.apache.cxf.transport.http,
              org.apache.cxf.transport.http_jetty,
              org.apache.cxf.transport.http_jetty.continuations,
              org.apache.cxf.ws.policy,
              org.apache.cxf.ws.policy.attachment,
              org.apache.cxf.ws.policy.attachment.external,
              org.apache.cxf.ws.policy.mtom,
              org.apache.karaf.jaas.boot.principal,
              org.eclipse.jetty.plus.jaas,
              org.hibernate.proxy,
              javassist.util.proxy,
              org.h2,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
