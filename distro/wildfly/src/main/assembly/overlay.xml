<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>overlay</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- JDBC Drivers -->
    <dependencySet>
      <outputDirectory>modules/org/postgres/main</outputDirectory>
      <includes>
        <include>org.postgresql:postgresql:jar</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>

    <dependencySet>
      <outputDirectory>modules/com/mysql/main</outputDirectory>
      <includes>
        <include>mysql:mysql-connector-java:jar</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>

<!--    <dependencySet>-->
